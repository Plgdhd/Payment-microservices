<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-order-items" author="order-service">
        <createTable tableName="order_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_order"
                             references="orders(id)"/>
            </column>

            <column name="item_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_item"
                             references="items(id)"/>
            </column>

            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_order_quantity" tableName="order_items">
            <column name="quantity"/>
        </createIndex>

        <createIndex indexName="idx_order_id" tableName="order_items">
            <column name="order_id"/>
        </createIndex>

        <createIndex indexName="idx_item_id" tableName="order_items">
            <column name="item_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
